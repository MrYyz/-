page {
    width: 100%;
    padding: 0 20rpx;
    box-sizing: border-box;
}
.card {
    border: 1rpx solid #ddd;
    border-radius: 10rpx;
    margin-top: 60rpx;
    padding: 30rpx;
    display: flex;
    flex-direction: column;
}
.card .card-title {
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 20rpx;
}
.card .card-date {
    font-size: 14px;
    color: #ccc;
    padding-bottom: 10rpx;
    border-bottom: 1rpx solid #ddd;
    margin-bottom: 20rpx;
}
.card .card-image {
    width: 100%;
    height: 300rpx;
}
.card .card-desc {
    padding: 20rpx 0;
    border-bottom: 1rpx solid #ddd;
}
.card .card-read {
    font-size: 14px;
    color: #666;
    padding-top: 20rpx;
}
