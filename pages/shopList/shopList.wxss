page {
    background-color: #FFF;
}
.shop {
    padding: 20rpx;
    border-bottom: 1rpx;
    display: flex;
    position: relative;
    border-bottom: 1rpx solid rgba(0, 0, 0, .1);
}
.shop:last-child{
    border-bottom: 0 none;
}
/* 图片 */
.shop-image {
    width: 160rpx;
    height: 160rpx;
    margin-right: 20rpx;
    border: 1rpx solid rgba(0, 0, 0, .1);
    border-radius: 5rpx;
}
/* 信息 */
.shop-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    font-size: 14px;
    color: #666;
    line-height: 1.5;
    overflow: hidden;
}
.shop-info .shop-title {
    font-size: 16px;
    color: #333;
    padding-right: 140rpx;
    box-sizing: border-box;
}
.shop-info .shop-time {
    color: #555;
}
.shop-info .shop-title,
.shop-info .shop-tel,
.shop-info .shop-address,
.shop-info .shop-time {
    width: 100%;
} 
.shop-star {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    color: #e2e2e2;
}
.shop-star .star-before {
    color: #f19e38;
    position: absolute;
    top: 0;
    left: 0;
    overflow: hidden;
}